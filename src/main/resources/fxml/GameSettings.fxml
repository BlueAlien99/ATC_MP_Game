<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.atc.client.controller.GameSettingsController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Button fx:id= "mainMenuButton" text="Main Menu" mnemonicParsing="false"/>
    </top>
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Text text="GAME SETTINGS"
                  GridPane.columnIndex="0" GridPane.rowIndex="0"
                  GridPane.columnSpan="2" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="40.0" />
            </font>

            </Text>
            <Label text="IP address of multiplayer server:"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="ipAddress"
                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Number of airplanes:"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <ComboBox fx:id="airplanesComboBox"  promptText="Choose"
                      GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button fx:id="applyButton" text = "Apply" mnemonicParsing="false"  GridPane.columnIndex="2"
            GridPane.rowIndex="3"/>
        </GridPane>
    </center>
    <bottom>
        <Label>ATC_MP_GAME by Majkowska, Kulus, Janowski. Made with ‚ù§ in 2020</Label>
    </bottom>
</BorderPane>
